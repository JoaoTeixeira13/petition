<section>

    <h2> I am the petition template </h2>

    <div class="petition-failure">
        {{#if error}}
            <p> Uh, oh. Something went wrong. please try again.</p>
        {{/if}}

    </div>

    <form method="POST">
        <input
            class="input-field"
            type="text"
            placeholder="First Name"
            name="fName"
            required
        />
        <input
            class="input-field"
            type="text"
            placeholder="Last Name"
            name="lName"
            required
        />
        <input
            type="hidden"
            placeholder="Signature"
            name="signature"
            id="signature-input"
            required
        />
        <canvas id="signCanvas" width="350" height="150"></canvas>

        <button class="submit-button">Submit</button>

    </form>
</section>

<script src="/script.js"></script>
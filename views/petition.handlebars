<section>

    <h2> Use your mouse on the canvas below to sign our petition. </h2>

    <div class="petition-failure">
        {{#if error}}
            <p> Uh, oh. Something went wrong. please try again.</p>
        {{/if}}

    </div>

    <form method="POST">

        <input
            type="hidden"
            placeholder="Signature"
            name="signature"
            id="signature-input"
            required
        />
        <canvas id="signCanvas" width="350" height="150"></canvas>

        <button class="submit-button">Submit</button>

    </form>
</section>

<script src="/script.js"></script>
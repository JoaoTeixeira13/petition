<section>

    <h2> 🐞 Thanks for signing, girl! 🐞</h2>

    <h2>{{sendResults.first}} {{sendResults.last}} </h2>
    <img src="{{sendResults.signature}}" alt="signature" />

    <a href="/petition/signers">
        Click here to see all other
        {{count}}
        people who signed so far.</a>
    <a href="/profile/edit">Edit your profile</a>
    <form method="post">
        {{! <input type="hidden" name="extra_submit_param" value="extra_submit_value"> }}
        <button
            type="submit"
            name="submit_param"
            value="submit_value"
            class="link-button"
        >
            You can delete your signature here.
        </button>
    </form>
</section>